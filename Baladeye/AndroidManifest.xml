<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AOU.baladeye"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".LandingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_landing"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title" >
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/contact_title" >
        </activity>
        <activity
            android:name=".NewsActivity"
            android:label="@string/news_title" >
        </activity>
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/latest_projects_title" >
        </activity>
        <activity
            android:name=".InvoicesActivity"
            android:label="@string/invoices_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name=".CerteficatesActivity"
            android:label="@string/title_activity_certeficates"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".WebsiteActivity"
            android:label="@string/title_activity_website" >
        </activity>
        <activity
            android:name=".FacilityJamahereActivity"
            android:label="@string/title_activity_facilities"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UrgentActivity"
            android:label="@string/title_activity_urgent" >
        </activity>
        <activity
            android:name=".InformationActivity"
            android:label="@string/title_activity_information" >
        </activity>
        <activity
            android:name=".CustomerServicesActivity"
            android:label="@string/title_activity_customer_services" >
        </activity>
        <activity
            android:name=".CityResidentActivity"
            android:label="@string/title_activity_city_resident" >
        </activity>
        <activity
            android:name=".ComplaintsActivity"
            android:label="@string/title_activity_complaints" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PayInvoiceActivity"
            android:label="@string/title_activity_pay_invoice" >
        </activity>
        <activity
            android:name=".FacilitiesListActivity"
            android:label="@string/title_activity_facilities_list" >
        </activity>
        <activity
            android:name=".FacilityMasla5Activity"
            android:label="@string/title_activity_facility_masla5" >
